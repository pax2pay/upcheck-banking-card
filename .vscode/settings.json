{
	"files.exclude": {
		".eslint*": true,
		".editorconfig": true,
		".npm*": true,
		".vscode*": true,
		".git*": true,
		".prettier*": true,
		"CODEOWNERS": true,
		"dist": true,
		"README.md": true,
		"LICENSE": true,
		"tsconfig.*": true,
		"node_modules": true,
		"*.code-workspace": true
	},
	"files.insertFinalNewline": true,
	"editor.tabSize": 2,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.formatOnSave": true,
	"editor.formatOnPaste": true,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"eslint.autoFixOnSave": "explicit"
	},
	"eslint.format.enable": true,
	"eslint.lintTask.enable": true,
	"javascript.format.enable": false,
	"typescript.format.enable": false,
	"cSpell.words": [
		"authly",
		"cloudly",
		"cryptly",
		"flagly",
		"formdata",
		"gracely",
		"isly",
		"isoly",
		"langly",
		"optionator",
		"paramly",
		"persistly",
		"prettierx",
		"selectivly",
		"servly",
		"servly-azure",
		"smoothly",
		"tidily",
		"transactly",
		"uply",
		"userwidgets",
		"utily"
	]
}
